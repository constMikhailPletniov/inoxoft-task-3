    }

    .reg {
        width: 150px;
        background-color: rgb(21, 5, 253);
        border-radius: 3%;
    }

    .reg:hover {
        background-color: darkmagenta;
    }

    a {
        margin-left: 10px;
        background-color: rgb(232, 248, 7);
    }

    p {
        margin-left: 11px;
    }
